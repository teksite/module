{
    "name": "teksite/module",
    "description": "a package to create modules for a laravel project",
    "keywords": [
        "modules",
        "laravel",
        "lareon",
        "module",
        "modularity"
    ],
    "authors": [
        {
            "name": "sina zangibadn",
            "email": "teksite.design@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "version": "0.2.0",
    "license": "MIT",
    "prefer-stable": true,

    "autoload": {
        "psr-4": {
            "Teksite\\Module\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "require": {
        "php": ">=8.2",
        "illuminate/support": "~12.0",
        "teksite/handler": "*",
        "teksite/extralaravel": "*",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-simplexml": "*",
        "wikimedia/composer-merge-plugin": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "^v9.0",
        "friendsofphp/php-cs-fixer": "^v3.52",
        "laravel/framework": "^v12.0",
        "laravel/pint": "^1.16",
        "spatie/phpunit-snapshot-assertions": "^5.0",
        "phpstan/phpstan": "^1.4"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Teksite\\Module\\ModuleServiceProvider"
            ]
        }
    },
    "branch-alias": {
        "dev": "0.0.1"
    },
    "config": {
        "allow-plugins": {
            "wikimedia/composer-merge-plugin": true
        }
    },
    "scripts": {
        "update-snapshots": "./phpunit --no-coverage -d --update-snapshots",
        "lint": "pint",
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "pcf": "vendor/bin/php-cs-fixer fix --verbose"
    }
}
